-- ACM Website Database Schema

-- Members Table
CREATE TABLE members (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name TEXT NOT NULL,
    role TEXT NOT NULL,
    year TEXT NOT NULL,
    session_year TEXT NOT NULL,
    description TEXT,
    expertise TEXT,
    linkedin TEXT,
    github TEXT,
    instagram TEXT,
    image_path TEXT
);

-- Events Table
CREATE TABLE events (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    title TEXT NOT NULL,
    category TEXT NOT NULL,
    status TEXT NOT NULL,
    event_date DATE NOT NULL,
    event_time TEXT,
    location TEXT,
    duration TEXT,
    description TEXT,
    year TEXT NOT NULL,
    event_page_url TEXT,
    image_path TEXT
);

-- Contact Submissions Table
CREATE TABLE contact_submissions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    first_name TEXT NOT NULL,
    last_name TEXT,
    email TEXT NOT NULL,
    phone TEXT,
    subject TEXT,
    message TEXT,
    newsletter BOOLEAN,
    status TEXT DEFAULT 'new',
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);

-- Community Submissions Table
CREATE TABLE community_submissions (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    fullname TEXT NOT NULL,
    email TEXT NOT NULL,
    rollno TEXT,
    year TEXT,
    branch TEXT,
    status TEXT DEFAULT 'new',
    created_at DATETIME DEFAULT CURRENT_TIMESTAMP
);
